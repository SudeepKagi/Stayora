<% layout('layouts/boilerplate') -%>

<!-- ================= HERO WITH SEARCH ================= -->
<section class="hero-home">
  <div class="hero-content-home">
    <h1 class="hero-title-home">Let's Find Your<br />Dream Property.</h1>
    <p class="hero-subtitle-home">
      Discover luxury accommodations across India's most stunning destinations
    </p>

    <!-- Search Box -->
    <div class="search-box">
      <div class="search-tabs">
        <button class="search-tab active">All</button>
        <button class="search-tab">Villa</button>
        <button class="search-tab">Apartment</button>
        <button class="search-tab">Homestay</button>
      </div>

      <form action="/listings" method="GET" class="search-form">
        <input
          type="text"
          name="search"
          class="search-input"
          placeholder="Keyword..."
          value="<%= typeof search !== 'undefined' ? search : '' %>"
        />
        <select name="category" class="search-input">
          <option value="">Select Category</option>
          <option value="Mountain">Mountain</option>
          <option value="Beach">Beach</option>
          <option value="Forest">Forest</option>
          <option value="Desert">Desert</option>
          <option value="Farm">Farm</option>
          <option value="Luxury">Luxury</option>
        </select>
        <input
          type="text"
          name="location"
          class="search-input"
          placeholder="Location..."
        />
        <button type="submit" class="btn btn-success">
          <i class="fa-solid fa-search"></i> Search
        </button>
      </form>
    </div>

    <!-- Property Type Cards -->
    <div class="property-types">
      <a href="/listings?category=Mountain" class="property-type-card">
        <div class="property-type-icon">
          <i class="fa-solid fa-mountain"></i>
        </div>
        <div class="property-type-name">Mountain</div>
        <div class="property-type-count">120+ Properties</div>
      </a>

      <a href="/listings?category=Beach" class="property-type-card">
        <div class="property-type-icon">
          <i class="fa-solid fa-umbrella-beach"></i>
        </div>
        <div class="property-type-name">Beach</div>
        <div class="property-type-count">85+ Properties</div>
      </a>

      <a href="/listings?category=Forest" class="property-type-card">
        <div class="property-type-icon">
          <i class="fa-solid fa-tree"></i>
        </div>
        <div class="property-type-name">Forest</div>
        <div class="property-type-count">95+ Properties</div>
      </a>

      <a href="/listings?category=Luxury" class="property-type-card">
        <div class="property-type-icon">
          <i class="fa-solid fa-gem"></i>
        </div>
        <div class="property-type-name">Luxury</div>
        <div class="property-type-count">150+ Properties</div>
      </a>

      <a href="/listings?category=Farm" class="property-type-card">
        <div class="property-type-icon">
          <i class="fa-solid fa-tractor"></i>
        </div>
        <div class="property-type-name">Farmhouse</div>
        <div class="property-type-count">50+ Properties</div>
      </a>
    </div>
  </div>
</section>

