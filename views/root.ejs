    z-index: 2;
    text-align: center;
    max-width: 1200px;
    padding: 0 40px;
  }

  .hero-label {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    color: #cf9d7b;
    font-weight: 600;
    display: block;
    margin-bottom: 30px;
  }

  .hero-title-massive {
    font-size: clamp(4rem, 12vw, 10rem);
    font-weight: 900;
    letter-spacing: 0.1em;
    color: #ffffff;
    line-height: 0.9;
    margin: 0;
    text-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  }

  .hero-subtitle {
    font-size: clamp(0.9rem, 2vw, 1.2rem);
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 20px;
    font-weight: 400;
  }

  .hero-location {
    font-size: 0.85rem;
    letter-spacing: 0.15em;
    color: #cf9d7b;
    margin-top: 40px;
    font-weight: 600;
  }

