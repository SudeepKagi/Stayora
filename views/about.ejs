    background: linear-gradient(rgba(12, 21, 25, 0.7), rgba(12, 21, 25, 0.85)),
      url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2400&auto=format&fit=crop')
        center/cover;
    text-align: center;
  }

  .about-cta-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    letter-spacing: 0.05em;
    color: #ffffff;
    margin-bottom: 15px;
  }

  .cta-subtitle {
    font-size: 1.2rem;
    color: #b8bac0;
