<% layout('layouts/boilerplate') -%>

<!-- ================= HERO ================= -->
<section class="about-hero">
  <div class="hero-overlay"></div>
  <div class="about-hero-content">
    <span class="about-label">ABOUT US</span>
    <h1 class="about-hero-title">REDEFINING<br />LUXURY LIVING</h1>
    <p class="about-hero-subtitle">Excellence in every detail</p>
  </div>
</section>

<!-- ================= STORY ================= -->
<section class="about-story">
  <div class="about-container">
    <div class="story-grid">
      <div class="story-image">
        <img
          src="https://images.unsplash.com/photo-1600585154526-990dced4db0d?q=80&w=1400"
          alt="Our Story"
        />
      </div>
      <div class="story-content">
        <h2 class="story-title">OUR STORY</h2>
        <p class="story-text">
          Founded with a vision to redefine luxury accommodations, Stayora
          curates exceptional properties that blend breathtaking locations with
          uncompromising elegance and comfort.
        </p>
        <p class="story-text">
          Each residence in our portfolio has been meticulously selected to meet
          our exacting standards of excellence, ensuring every guest experiences
          the pinnacle of refined living.
        </p>
        <p class="story-text">
          From mountain retreats to coastal havens, we offer discerning
          travelers access to India's most exclusive destinations.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- ================= VALUES ================= -->
<section class="about-values">
  <div class="about-container">
    <h2 class="values-title">WHAT SETS US APART</h2>

    <div class="values-grid">
      <div class="value-card">
        <div class="value-icon">
          <i class="fa-solid fa-gem"></i>
        </div>
        <h3 class="value-title">CURATED EXCELLENCE</h3>
        <p class="value-description">
          Every property undergoes rigorous selection to ensure it meets our
          uncompromising standards of luxury and sophistication.
        </p>
      </div>

      <div class="value-card">
        <div class="value-icon">
          <i class="fa-solid fa-location-dot"></i>
        </div>
        <h3 class="value-title">PRIME LOCATIONS</h3>
        <p class="value-description">
          Strategically positioned in India's most coveted destinations,
          offering breathtaking views and exclusive access.
        </p>
      </div>

      <div class="value-card">
        <div class="value-icon">
          <i class="fa-solid fa-crown"></i>
        </div>
        <h3 class="value-title">PREMIUM SERVICE</h3>
        <p class="value-description">
          White-glove service and personalized attention ensure an unforgettable
          experience from booking to checkout.
        </p>
      </div>

      <div class="value-card">
        <div class="value-icon">
          <i class="fa-solid fa-shield-halved"></i>
        </div>
        <h3 class="value-title">TRUSTED QUALITY</h3>
        <p class="value-description">
          Verified hosts and properties you can trust, backed by our commitment
          to excellence and guest satisfaction.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- ================= CTA ================= -->
<section class="about-cta">
  <div class="about-cta-content">
    <h2 class="cta-title">EXPERIENCE LUXURY</h2>
    <p class="cta-subtitle">Discover your perfect escape</p>
    <a href="/listings" class="btn btn-success btn-large">EXPLORE PROPERTIES</a>
  </div>
</section>

