    .story-grid {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .story-image img {
      min-height: 400px;
    }
  }

  @media (max-width: 768px) {
    .values-grid {
      grid-template-columns: 1fr;
    }

    .about-hero-title {
      font-size: 2.5rem;
    }
  }
