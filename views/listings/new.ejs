<% layout('layouts/boilerplate') -%>

<section class="luxury-form-section">
  <div class="container py-5">
    <div class="form-header-minimal mb-5">
      <a href="/listings" class="back-text-link mb-3 d-inline-block">
        <i class="fa-solid fa-arrow-left-long me-2"></i> BACK TO COLLECTION
      </a>
      <h1 class="serif-title">LIST YOUR RESIDENCE</h1>
      <p class="text-muted italic">
        Share your unique property with our exclusive community
      </p>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-10">
        <form
          action="/listings"
          method="POST"
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >
          <div class="row">
            <div class="col-md-7 pe-md-5">
              <div class="mb-4">
                <label class="luxury-label">PROPERTY TITLE *</label>
                <input
                  type="text"
                  name="listing[title]"
                  class="luxury-input"
                  placeholder="e.g., The Obsidian Villa"
                  required
                />
                <div class="invalid-feedback">
                  A distinguished title is required.
                </div>
              </div>

              <div class="mb-4">
                <label class="luxury-label">DESCRIPTION *</label>
                <textarea
                  name="listing[description]"
                  class="luxury-input"
                  rows="8"
                  placeholder="Describe the ambiance, heritage, and unique features..."
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please provide a detailed description.
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <label class="luxury-label">LOCATION *</label>
                  <input
                    type="text"
                    name="listing[location]"
                    class="luxury-input"
                    placeholder="e.g., Udaipur"
                    required
                  />
                </div>
                <div class="col-md-6 mb-4">
                  <label class="luxury-label">COUNTRY *</label>
                  <input
                    type="text"
                    name="listing[country]"
                    class="luxury-input"
                    placeholder="e.g., India"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="col-md-5">
              <div class="mb-4">
                <label class="luxury-label">PROPERTY IMAGE *</label>
                <div class="upload-placeholder-box">
                  <i class="fa-solid fa-camera mb-2"></i>
                  <input
                    type="file"
                    name="listing[image]"
                    class="luxury-input file-input-style"
                    accept="image/*"
                    required
                  />
                </div>
                <small class="text-muted d-block mt-2"
                  >Use high-resolution horizontal photos for best
                  results.</small
                >
                <div class="invalid-feedback">
                  A property visual is required.
                </div>
              </div>

              <div class="mb-4">
                <label class="luxury-label">PRICE PER NIGHT (â‚¹) *</label>
                <input
                  type="number"
                  name="listing[price]"
                  class="luxury-input"
                  placeholder="15000"
                  min="1"
                  required
                />
                <div class="invalid-feedback">Please enter a valid price.</div>
              </div>

              <div class="mb-5">
                <label class="luxury-label">COLLECTION / CATEGORY *</label>
                <select name="listing[category]" class="luxury-input" required>
                  <option value="" disabled selected>Select Category</option>
                  <option value="Mountain">Mountain</option>
                  <option value="Beach">Beach</option>
                  <option value="Forest">Forest</option>
                  <option value="Desert">Desert</option>
                  <option value="Farm">Farm</option>
                  <option value="Luxury">Luxury</option>
                  <option value="Camping">Camping</option>
                </select>
                <div class="invalid-feedback">Please select a category.</div>
              </div>

              <button type="submit" class="gold-button w-100 py-3">
                PUBLISH LISTING
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
