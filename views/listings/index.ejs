<% layout('layouts/boilerplate') -%>

<section class="page-header-luxury">
  <div class="container text-center">
    <span class="gold-label">EXPLORE OUR COLLECTION</span>
    <h1 class="serif-title-large">PREMIUM PROPERTIES</h1>
    <p class="section-subtitle">
      Handpicked luxury residences across the most breathtaking locations.
    </p>
  </div>
</section>

<section class="filter-section-luxury">
  <div class="container">
    <div class="filter-wrapper">
      <div class="filter-scroll-container">
        <a href="/listings" class="filter-btn <%= !category ? 'active' : '' %>">
          <i class="fa-solid fa-border-all"></i><span>ALL</span>
        </a>
        <a
          href="/listings?category=Forest"
          class="filter-btn <%= category === 'Forest' ? 'active' : '' %>"
        >
          <i class="fa-solid fa-tree"></i><span>FOREST</span>
        </a>
        <a
          href="/listings?category=Mountain"
          class="filter-btn <%= category === 'Mountain' ? 'active' : '' %>"
        >
          <i class="fa-solid fa-mountain"></i><span>MOUNTAIN</span>
        </a>
        <a
          href="/listings?category=Beach"
          class="filter-btn <%= category === 'Beach' ? 'active' : '' %>"
        >
          <i class="fa-solid fa-umbrella-beach"></i><span>BEACH</span>
        </a>
        <a
          href="/listings?category=Luxury"
          class="filter-btn <%= category === 'Luxury' ? 'active' : '' %>"
        >
          <i class="fa-solid fa-gem"></i><span>LUXURY</span>
        </a>
        <a
          href="/listings?category=Farm"
          class="filter-btn <%= category === 'Farm' ? 'active' : '' %>"
        >
          <i class="fa-solid fa-tractor"></i><span>FARM</span>
        </a>
      </div>
      <a href="/listings/new" class="add-property-minimal"
        >+ LIST YOUR PROPERTY</a
      >
    </div>
  </div>
</section>

<section class="listings-grid-section">
  <div class="container">
    <% if (allListings.length === 0) { %>
    <div class="no-results-luxury">
      <h3 class="serif-title">NO PROPERTIES FOUND</h3>
      <p>Try adjusting your filters or explore our full collection.</p>
      <a href="/listings" class="gold-button">RESET FILTERS</a>
    </div>
    <% } %>

    <div class="row g-5">
      <% for (let list of allListings) { %>
      <div class="col-lg-4 col-md-6">
        <div class="property-card-luxury">
          <a href="/listings/<%= list._id %>" class="card-image-link">
            <div class="image-zoom-container">
              <img
                src="<%= list.image.url %>"
                alt="<%= list.title %>"
                class="img-fluid"
              />
              <div class="card-category-tag"><%= list.category %></div>
            </div>
          </a>
          <div class="card-details-luxury">
            <div class="location-tag">
              <i class="fa-solid fa-location-dot"></i> <%= list.location %>, <%=
              list.country %>
            </div>
            <h3 class="property-title-serif"><%= list.title %></h3>
            <div class="price-box-luxury">
              <span class="price-amount"
                >â‚¹ <%= list.price.toLocaleString("en-IN") %></span
              >
              <span class="price-night">/ NIGHT</span>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
