<% layout('layouts/boilerplate') -%>

<!-- ================= PROPERTY HERO IMAGE ================= -->
<section style="position: relative; height: 60vh; min-height: 400px">
  <img
    src="<%= list.image.url %>"
    alt="<%= list.title %>"
    style="width: 100%; height: 100%; object-fit: cover"
  />
  <div
    style="
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        to bottom,
        rgba(15, 27, 46, 0.3),
        rgba(15, 27, 46, 0.7)
      );
    "
  >
    <div style="padding: 30px 40px">
      <a
        href="/listings"
        style="
          color: var(--text-white);
          text-decoration: none;
          display: inline-flex;
          align-items: center;
          gap: 8px;
          font-weight: 600;
          font-size: 0.9rem;
          background: rgba(26, 41, 66, 0.8);
          padding: 10px 20px;
          border-radius: 8px;
          backdrop-filter: blur(10px);
        "
      >
        <i class="fa-solid fa-arrow-left"></i> Back to Properties
      </a>
    </div>
  </div>
</section>

<!-- ================= PROPERTY DETAILS ================= -->
<section style="padding: 60px 40px; background: var(--primary-dark)">
  <div style="max-width: 1200px; margin: 0 auto">
    <!-- Header Section -->
    <div
      style="
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 40px;
      "
    >
      <div style="flex: 1; min-width: 300px">
        <!-- Category Badge -->
        <span
          style="
            display: inline-block;
            background: rgba(255, 90, 60, 0.1);
            color: var(--accent-orange);
            padding: 6px 14px;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 15px;
          "
        >
          <%= list.category %>
        </span>

        <!-- Host Badge -->
        <% if (list.owner) { %>
        <span
          style="
            display: inline-block;
            background: rgba(139, 147, 167, 0.1);
            color: var(--text-gray);
            padding: 6px 14px;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-left: 10px;
            margin-bottom: 15px;
          "
        >
          Host: <%= list.owner.username %>
        </span>
        <% } %>

        <h1
          style="
            font-size: clamp(2rem, 4vw, 3rem);
            font-weight: 800;
            color: var(--text-white);
            margin-bottom: 15px;
            line-height: 1.2;
          "
        >
          <%= list.title %>
        </h1>

        <p
          style="
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--text-gray);
            font-size: 1.05rem;
            margin-bottom: 20px;
          "
        >
          <i
            class="fa-solid fa-location-dot"
            style="color: var(--accent-orange)"
          ></i>
          <%= list.location %>, <%= list.country %>
        </p>

        <!-- Rating -->
        <div
          style="
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
          "
        >
          <span style="color: #fbbf24; font-size: 1.1rem">★★★★★</span>
          <span style="color: var(--text-gray); font-size: 0.95rem"
            >(4.8 rating)</span
          >
        </div>

        <!-- Price -->
        <div
          style="
            font-size: 2.5rem;
            font-weight: 900;
            color: var(--accent-orange);
          "
        >
          ₹<%= list.price.toLocaleString("en-IN") %>
          <span
            style="font-size: 1rem; color: var(--text-gray); font-weight: 400"
            >/night</span
          >
        </div>
      </div>

      <!-- Owner Actions -->
      <% if (currUser && list.owner && list.owner._id.equals(currUser._id)) { %>
      <div style="display: flex; gap: 12px; flex-wrap: wrap">
        <a
          href="/listings/<%= list._id %>/edit"
          class="btn btn-outline-success"
        >
          <i class="fa-solid fa-edit"></i> Edit Property
        </a>
        <form
          method="POST"
          action="/listings/<%= list._id %>?_method=DELETE"
          onsubmit="return confirm('Delete this property?')"
          style="display: inline"
        >
          <button class="btn btn-outline-danger">
            <i class="fa-solid fa-trash"></i> Delete
          </button>
        </form>
      </div>
      <% } %>
    </div>

    <!-- Property Features -->
    <div
      style="
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-bottom: 50px;
        padding: 30px;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
      "
    >
      <div style="text-align: center">
        <i
          class="fa-solid fa-bed"
          style="
            font-size: 2rem;
            color: var(--accent-orange);
            margin-bottom: 10px;
          "
        ></i>
        <div
          style="font-size: 1.5rem; font-weight: 700; color: var(--text-white)"
        >
          3
        </div>
        <div style="color: var(--text-gray); font-size: 0.9rem">Bedrooms</div>
      </div>
      <div style="text-align: center">
        <i
          class="fa-solid fa-bath"
          style="
            font-size: 2rem;
            color: var(--accent-orange);
            margin-bottom: 10px;
          "
        ></i>
        <div
          style="font-size: 1.5rem; font-weight: 700; color: var(--text-white)"
        >
          2
        </div>
        <div style="color: var(--text-gray); font-size: 0.9rem">Bathrooms</div>
      </div>
      <div style="text-align: center">
        <i
          class="fa-solid fa-ruler-combined"
          style="
            font-size: 2rem;
            color: var(--accent-orange);
            margin-bottom: 10px;
          "
        ></i>
        <div
          style="font-size: 1.5rem; font-weight: 700; color: var(--text-white)"
        >
          1800
        </div>
        <div style="color: var(--text-gray); font-size: 0.9rem">Sqft</div>
      </div>
      <div style="text-align: center">
        <i
          class="fa-solid fa-car"
          style="
            font-size: 2rem;
            color: var(--accent-orange);
            margin-bottom: 10px;
          "
        ></i>
        <div
          style="font-size: 1.5rem; font-weight: 700; color: var(--text-white)"
        >
          2
        </div>
        <div style="color: var(--text-gray); font-size: 0.9rem">Parking</div>
      </div>
    </div>

    <!-- Description -->
    <div style="margin-bottom: 60px">
      <h2
        style="
          font-size: 1.8rem;
          font-weight: 700;
          color: var(--text-white);
          margin-bottom: 20px;
        "
      >
        About This Property
      </h2>
      <p style="color: var(--text-gray); font-size: 1.05rem; line-height: 1.8">
        <%= list.description %>
      </p>
    </div>
  </div>
</section>

<!-- ================= REVIEWS SECTION ================= -->
<section style="padding: 60px 40px; background: var(--secondary-dark)">
  <div style="max-width: 1200px; margin: 0 auto">
    <h2
      style="
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-white);
        margin-bottom: 10px;
      "
    >
      Guest Reviews
    </h2>
    <p style="color: var(--text-gray); margin-bottom: 40px">
      <%= list.reviews.length %> <%= list.reviews.length === 1 ? 'Review' :
      'Reviews' %>
    </p>

    <!-- Leave Review Form -->
    <% if (currUser) { %>
    <div
      style="
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 30px;
        margin-bottom: 40px;
      "
    >
      <h3
        style="
          font-size: 1.3rem;
          font-weight: 700;
          color: var(--text-white);
          margin-bottom: 20px;
        "
      >
        Leave a Review
      </h3>

      <form
        action="/listings/<%= list._id %>/reviews"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <!-- Rating -->
        <div style="margin-bottom: 25px">
          <label
            style="
              display: block;
              color: var(--text-white);
              font-weight: 600;
              margin-bottom: 12px;
              font-size: 0.95rem;
            "
          >
            Rating
          </label>
          <div style="display: flex; gap: 15px">
            <% for (let i = 1; i <= 5; i++) { %>
            <label style="cursor: pointer">
              <input
                type="radio"
                name="review[rating]"
                value="<%= i %>"
                required
                style="display: none"
              />
              <span
                style="
                  display: inline-block;
                  width: 45px;
                  height: 45px;
                  line-height: 45px;
                  text-align: center;
                  border: 2px solid var(--border-color);
                  border-radius: 8px;
                  color: var(--text-gray);
                  font-weight: 700;
                  transition: all 0.3s;
                "
              >
                <%= i %>
              </span>
            </label>
            <% } %>
          </div>
        </div>

        <!-- Comment -->
        <div style="margin-bottom: 25px">
          <label
            style="
              display: block;
              color: var(--text-white);
              font-weight: 600;
              margin-bottom: 12px;
              font-size: 0.95rem;
            "
          >
            Your Review
          </label>
          <textarea
            name="review[comment]"
            rows="4"
            required
            placeholder="Share your experience..."
            style="
              width: 100%;
              padding: 14px;
              background: var(--primary-dark);
              border: 1px solid var(--border-color);
              border-radius: 8px;
              color: var(--text-white);
              font-size: 0.95rem;
              resize: vertical;
            "
          ></textarea>
        </div>

        <button type="submit" class="btn btn-success">
          <i class="fa-solid fa-paper-plane"></i> Submit Review
        </button>
      </form>
    </div>
    <% } else { %>
    <div
      style="
        text-align: center;
        padding: 40px;
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        margin-bottom: 40px;
      "
    >
      <p style="color: var(--text-gray); font-size: 1.05rem">
        <a
          href="/login"
          style="
            color: var(--accent-orange);
            text-decoration: none;
            font-weight: 600;
          "
          >Log in</a
        >
        to leave a review
      </p>
    </div>
    <% } %>

    <!-- Reviews List -->
    <% if (list.reviews.length === 0) { %>
    <p style="text-align: center; color: var(--text-gray); padding: 40px">
      No reviews yet. Be the first to review!
    </p>
    <% } else { %>
    <div
      style="
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
      "
    >
      <% for (let review of list.reviews) { %>
      <div
        style="
          background: var(--card-bg);
          border: 1px solid var(--border-color);
          border-radius: 12px;
          padding: 25px;
        "
      >
        <div
          style="
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
          "
        >
          <div>
            <div
              style="
                font-weight: 700;
                color: var(--text-white);
                font-size: 1.05rem;
                margin-bottom: 5px;
              "
            >
              <%= review.author?.username || "Guest" %>
            </div>
            <div style="color: #fbbf24; font-size: 0.95rem">
              <% for (let i = 0; i < review.rating; i++) { %>★<% } %>
            </div>
          </div>
          <% if (currUser && review.author &&
          review.author._id.equals(currUser._id)) { %>
          <form
            action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <button
              style="
                background: transparent;
                border: 1px solid #dc3545;
                color: #dc3545;
                padding: 6px 12px;
                border-radius: 6px;
                cursor: pointer;
                font-size: 0.8rem;
                font-weight: 600;
                transition: all 0.3s;
              "
            >
              Delete
            </button>
          </form>
          <% } %>
        </div>
        <p
          style="color: var(--text-gray); line-height: 1.7; margin-bottom: 12px"
        >
          <%= review.comment %>
        </p>
        <small style="color: #6a6d75; font-size: 0.85rem">
          <%= review.createdAt.toDateString() %>
        </small>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
</section>

<!-- ================= MAP SECTION ================= -->
<section style="padding: 60px 40px; background: var(--primary-dark)">
  <div style="max-width: 1200px; margin: 0 auto">
    <h2
      style="
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-white);
        margin-bottom: 10px;
      "
    >
      Location
    </h2>
    <p style="color: var(--text-gray); margin-bottom: 25px">
      Where you'll be staying
    </p>
    <div
      id="map"
      style="
        width: 100%;
        height: 400px;
        border-radius: 12px;
        border: 1px solid var(--border-color);
      "
    ></div>
  </div>
</section>

<script>
  window.MAP_TOKEN = '<%= mapToken %>';
  <% if (list.geometry && list.geometry.coordinates.length) { %>
    window.coordinates = <%- JSON.stringify(list.geometry.coordinates) %>;
  <% } %>
</script>

<script src="/js/map.js"></script>

<style>
  /* Rating hover effect */
  input[type='radio']:checked + span,
  label:hover input[type='radio'] + span {
    background: var(--accent-orange);
    border-color: var(--accent-orange);
    color: var(--text-white);
  }

  /* Form focus styles */
  textarea:focus {
    outline: none;
    border-color: var(--accent-orange);
    box-shadow: 0 0 0 3px rgba(255, 90, 60, 0.1);
  }

  /* Delete button hover */
  form button[style*='color: #dc3545']:hover {
    background: #dc3545 !important;
    color: white !important;
  }
</style>
