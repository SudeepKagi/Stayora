<% if (success && success.length > 0) { %>
<div class="flash-luxury success-toast shadow-sm">
  <div class="flash-content">
    <span class="flash-status-dot success-dot"></span>
    <span class="flash-text"><%= success %></span>
  </div>
  <button class="flash-close-btn" onclick="this.parentElement.remove()">
    ✕
  </button>
</div>
<% } %> <% if (error && error.length > 0) { %>
<div class="flash-luxury error-toast shadow-sm">
  <div class="flash-content">
    <span class="flash-status-dot error-dot"></span>
    <span class="flash-text"><%= error %></span>
  </div>
  <button class="flash-close-btn" onclick="this.parentElement.remove()">
    ✕
  </button>
</div>
<% } %>
