<% layout('layouts/boilerplate') -%>

<section class="luxury-auth-wrapper">
  <div
    class="container d-flex justify-content-center align-items-center min-vh-90"
  >
    <div class="auth-card-minimal">
      <div class="auth-header-luxury text-center mb-5">
        <span class="gold-label-small">JOIN THE COLLECTION</span>
        <h1 class="serif-title mt-2">CREATE ACCOUNT</h1>
        <p class="text-muted small italic">
          Join Stayora for exclusive access to luxury stays
        </p>
      </div>

      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-4">
          <label class="luxury-label">USERNAME</label>
          <input
            type="text"
            name="username"
            class="luxury-input"
            placeholder="Choose your username"
            required
          />
          <div class="invalid-feedback">Please choose a username.</div>
        </div>

        <div class="mb-4">
          <label class="luxury-label">EMAIL ADDRESS</label>
          <input
            type="email"
            name="email"
            class="luxury-input"
            placeholder="email@example.com"
            required
          />
          <div class="invalid-feedback">A valid email is required.</div>
        </div>

        <div class="mb-4">
          <label class="luxury-label">PASSWORD</label>
          <input
            type="password"
            name="password"
            class="luxury-input"
            placeholder="Minimum 6 characters"
            minlength="6"
            required
          />
          <div class="invalid-feedback">
            Password must be at least 6 characters.
          </div>
        </div>

        <button type="submit" class="gold-button w-100 py-3 mt-2">
          CREATE ACCOUNT
        </button>
      </form>

      <div class="auth-footer-minimal text-center mt-5 pt-4 border-top">
        <p class="text-muted small">Already part of Stayora?</p>
        <a href="/login" class="luxury-text-link">SIGN IN TO ACCOUNT</a>
      </div>
    </div>
  </div>
</section>
