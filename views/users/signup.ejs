<% layout('layouts/boilerplate') -%>

<section
  style="
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(rgba(15, 27, 46, 0.95), rgba(15, 27, 46, 0.95)),
      url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2400')
        center/cover;
    padding: 60px 20px;
  "
>
  <div style="width: 100%; max-width: 480px">
    <div
      style="
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 50px 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
      "
    >
      <!-- Header -->
      <div style="text-align: center; margin-bottom: 35px">
        <h1
          style="
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--text-white);
            margin-bottom: 10px;
          "
        >
          Create Account
        </h1>
        <p style="color: var(--text-gray); font-size: 0.95rem">
          Join Stayora today
        </p>
      </div>

      <!-- Signup Form -->
      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="form-group-luxury">
          <label class="form-label-luxury">USERNAME</label>
          <input
            type="text"
            name="username"
            class="form-control-luxury"
            placeholder="Choose a username"
            required
            autofocus
          />
          <div
            class="invalid-feedback"
            style="color: #ef4444; font-size: 0.85rem; margin-top: 8px"
          >
            Please enter a username
          </div>
        </div>

        <div class="form-group-luxury">
          <label class="form-label-luxury">EMAIL</label>
          <input
            type="email"
            name="email"
            class="form-control-luxury"
            placeholder="Your email address"
            required
          />
          <div
            class="invalid-feedback"
            style="color: #ef4444; font-size: 0.85rem; margin-top: 8px"
          >
            Please enter a valid email
          </div>
        </div>

        <div class="form-group-luxury">
          <label class="form-label-luxury">PASSWORD</label>
          <input
            type="password"
            name="password"
            class="form-control-luxury"
            placeholder="Create a strong password"
            required
            minlength="6"
          />
          <div
            class="invalid-feedback"
            style="color: #ef4444; font-size: 0.85rem; margin-top: 8px"
          >
            Password must be at least 6 characters
          </div>
        </div>

        <button
          type="submit"
          class="btn btn-success w-100"
          style="margin-top: 10px; padding: 14px"
        >
          <i class="fa-solid fa-user-plus"></i> Create Account
        </button>
      </form>

      <!-- Footer -->
      <div
        style="
          text-align: center;
          margin-top: 30px;
          padding-top: 25px;
          border-top: 1px solid var(--border-color);
        "
      >
        <p style="color: var(--text-gray); font-size: 0.95rem">
          Already have an account?
          <a
            href="/login"
            style="
              color: var(--accent-orange);
              text-decoration: none;
              font-weight: 600;
              margin-left: 5px;
            "
          >
            Sign in
          </a>
        </p>
      </div>
    </div>
  </div>
</section>
