<% layout('layouts/boilerplate') -%>

<section
  style="
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(rgba(15, 27, 46, 0.95), rgba(15, 27, 46, 0.95)),
      url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2400')
        center/cover;
    padding: 60px 20px;
  "
>
  <div style="width: 100%; max-width: 480px">
    <div
      style="
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 50px 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
      "
    >
      <!-- Header -->
      <div style="text-align: center; margin-bottom: 35px">
        <h1
          style="
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--text-white);
            margin-bottom: 10px;
          "
        >
          Welcome Back
        </h1>
        <p style="color: var(--text-gray); font-size: 0.95rem">
          Sign in to access your account
        </p>
      </div>

      <!-- Login Form -->
      <form action="/login" method="POST">
        <div class="form-group-luxury">
          <label class="form-label-luxury">USERNAME</label>
          <input
            type="text"
            name="username"
            class="form-control-luxury"
            placeholder="Enter your username"
            required
            autofocus
          />
        </div>

        <div class="form-group-luxury">
          <label class="form-label-luxury">PASSWORD</label>
          <input
            type="password"
            name="password"
            class="form-control-luxury"
            placeholder="Enter your password"
            required
          />
        </div>

        <button
          type="submit"
          class="btn btn-success w-100"
          style="margin-top: 10px; padding: 14px"
        >
          <i class="fa-solid fa-sign-in-alt"></i> Sign In
        </button>
      </form>

      <!-- Footer -->
      <div
        style="
          text-align: center;
          margin-top: 30px;
          padding-top: 25px;
          border-top: 1px solid var(--border-color);
        "
      >
        <p style="color: var(--text-gray); font-size: 0.95rem">
          Don't have an account?
          <a
            href="/signup"
            style="
              color: var(--accent-orange);
              text-decoration: none;
              font-weight: 600;
              margin-left: 5px;
            "
          >
            Create one
          </a>
        </p>
      </div>
    </div>
  </div>
</section>
