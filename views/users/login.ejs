<% layout('layouts/boilerplate') -%>

<section class="luxury-auth-wrapper">
  <div
    class="container d-flex justify-content-center align-items-center min-vh-90"
  >
    <div class="auth-card-minimal">
      <div class="auth-header-luxury text-center mb-5">
        <span class="gold-label-small">WELCOME BACK</span>
        <h1 class="serif-title mt-2">ACCOUNT SIGN IN</h1>
        <p class="text-muted small italic">
          Enter your credentials to access the collection
        </p>
      </div>

      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-4">
          <label class="luxury-label">USERNAME</label>
          <input
            type="text"
            name="username"
            class="luxury-input"
            placeholder="Your username"
            required
          />
          <div class="invalid-feedback">A valid username is required.</div>
        </div>

        <div class="mb-4">
          <div class="d-flex justify-content-between">
            <label class="luxury-label">PASSWORD</label>
          </div>
          <input
            type="password"
            name="password"
            class="luxury-input"
            placeholder="Your password"
            required
          />
          <div class="invalid-feedback">Password is required to proceed.</div>
        </div>

        <button type="submit" class="gold-button w-100 py-3 mt-2">
          SIGN IN
        </button>
      </form>

      <div class="auth-footer-minimal text-center mt-5 pt-4 border-top">
        <p class="text-muted small">New to Stayora?</p>
        <a href="/signup" class="luxury-text-link">CREATE AN ACCOUNT</a>
      </div>
    </div>
  </div>
</section>
