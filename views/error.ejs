<% layout('layouts/boilerplate') -%>

<section class="luxury-error-wrapper">
  <div class="container text-center">
    <div class="error-visual-meta">
      <span class="error-status-code"><%= statusCode %></span>
    </div>

    <div class="error-content-box">
      <h1 class="serif-title mb-3">UNEXPECTED DEPARTURE</h1>
      <p class="text-muted italic mb-5">
        The destination you are seeking is currently unavailable or has been
        moved.
      </p>

      <div class="error-details-box mb-5">
        <code class="error-technical-msg"><%= message %></code>
      </div>

      <div class="d-flex justify-content-center gap-4">
        <a href="/" class="gold-button px-5">RETURN HOME</a>
        <a href="/listings" class="outline-dark-btn">BROWSE PROPERTIES</a>
      </div>
    </div>
  </div>
</section>
