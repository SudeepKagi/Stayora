<% layout('layouts/boilerplate') -%>

<section class="error-section">
  <div class="error-content">
    <div class="error-code"><%= statusCode %></div>
    <h1 class="error-title">OOPS! SOMETHING WENT WRONG</h1>
    <p class="error-message"><%= message %></p>
    <a href="/" class="btn btn-success mt-4">BACK TO HOME</a>
  </div>
</section>

<style>
  .error-section {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #0c1519;
    padding: 60px 40px;
    text-align: center;
  }

  .error-content {
    max-width: 600px;
  }

  .error-code {
    font-size: clamp(5rem, 15vw, 10rem);
    font-weight: 900;
    color: #cf9d7b;
    line-height: 1;
    margin-bottom: 30px;
  }

  .error-title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    letter-spacing: 0.05em;
    color: #ffffff;
    margin-bottom: 20px;
  }

  .error-message {
    font-size: 1.1rem;
    color: #b8bac0;
    line-height: 1.7;
    margin-bottom: 30px;
  }
</style>
